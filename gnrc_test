//Функция сортировки обьекта, которые имеют id

const data = [
    {id:1, name:'Yulik'},
    {id:2, name:'Maks'},
    {id:3, name:'Yulia'}, 
]
interface ID {
    id: number;
}
//'asc' по возрастанию | 'desc' по убыванию
function sort<T extends ID> (data: T[], type: 'asc' | 'desc' = 'asc'): T[] {
    return data.sort ((a,b) => {
        switch (type) {
            case 'asc':
                return a.id - b.id;
            case 'desc':
                return b.id - a.id;
        }
    })
}

